{
  "name": "cucumber-playwright-ts",
  "version": "1.0.0",
  "description": "Cucumber framework with TypeScript and Playwright",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --config=config/cucumber.js",
    "test:chrome": "cucumber-js --config=config/cucumber.js --profile=chrome",
    "test:firefox": "cucumber-js --config=config/cucumber.js --profile=firefox",
    "test:webkit": "cucumber-js --config=config/cucumber.js --profile=webkit",
    "test:headless": "HEADLESS=true cucumber-js --config=config/cucumber.js",
    "test:headed": "HEADLESS=false cucumber-js --config=config/cucumber.js",
    "preinstall": "npx playwright install --with-deps"
  },
  "keywords": [
    "cucumber",
    "playwright",
    "typescript",
    "testing",
    "bdd"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.9.0",
    "playwright": "^1.40.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  }
}
