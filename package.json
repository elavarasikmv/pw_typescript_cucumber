{
  "name": "cucumber-playwright-ts",
  "version": "1.0.0",
  "description": "Cucumber framework with TypeScript and Playwright",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "cross-env NODE_ENV=development node server.js",
    "build": "echo 'No build step required for Node.js app'",
    "install-browsers": "npx playwright install --with-deps",
    "install-browsers-docker": "npx playwright install chromium --with-deps",
    "install-browsers-azure": "npx playwright install chromium --with-deps && npx playwright install-deps",
    "prestart": "npm run install-browsers-docker",
    "postinstall": "echo 'Installation complete. Run npm run install-browsers-azure in Azure.'",
    "test": "cucumber-js --config=config/cucumber.js",
    "test:debug": "cross-env LOG_LEVEL=debug cucumber-js --config=config/cucumber.js",
    "test:verbose": "cross-env LOG_LEVEL=debug cucumber-js --config=config/cucumber.js --format @cucumber/pretty-formatter",
    "test:chrome": "cucumber-js --config=config/cucumber.js --profile=chrome",
    "test:firefox": "cucumber-js --config=config/cucumber.js --profile=firefox",
    "test:webkit": "cucumber-js --config=config/cucumber.js --profile=webkit",
    "test:headless": "cross-env HEADLESS=true cucumber-js --config=config/cucumber.js",
    "test:headed": "cross-env HEADLESS=false cucumber-js --config=config/cucumber.js",
    "test:azure": "./azure-startup.sh",
    "test:script": "./run-tests.sh",
    "test:script:windows": "powershell -ExecutionPolicy Bypass -File run-tests.ps1",
    "test:logs": "cross-env LOG_LEVEL=debug npm test && echo Logs generated in ./logs/",
    "logs": "powershell -ExecutionPolicy Bypass -File logs.ps1",
    "logs:list": "powershell -ExecutionPolicy Bypass -File logs.ps1 list",
    "logs:latest": "powershell -ExecutionPolicy Bypass -File logs.ps1 latest",
    "logs:app": "powershell -ExecutionPolicy Bypass -File logs.ps1 app",
    "logs:clean": "powershell -Command \"if (Test-Path './logs') { Remove-Item ./logs/*.log -Force; Write-Host 'Logs cleaned' } else { Write-Host 'No logs to clean' }\"",
    "preinstall": "echo 'Preparing for Playwright installation...'",
    "azure:install": "npx playwright install chromium --with-deps && npx playwright install-deps",
    "azure:test": "npm run azure:install && npm test"
  },
  "keywords": [
    "cucumber",
    "playwright",
    "typescript",
    "testing",
    "bdd"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^9.6.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.9.0",
    "cross-env": "^7.0.3",
    "playwright": "^1.40.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "playwright-core": "^1.40.0"
  }
}
